<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >


    <EditText
        android:id="@+id/email1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Enter email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/email1"
        android:layout_below="@+id/email1"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/rgt_btn1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="Register" />

    <Button
        android:id="@+id/sign_in_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/rgt_btn1"
        android:layout_below="@+id/rgt_btn1"
        android:layout_marginStart="40dp"
        android:layout_marginTop="26dp"
        android:text="SignIn" />

    <Button
        android:id="@+id/frg_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_in_btn1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="forgot password" />

</RelativeLayout>
